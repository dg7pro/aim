<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_VIPPORTFOLIO_PROJECTS_VIEW_LINEAL_TITLE">
        <message>
            <![CDATA[COM_VIPPORTFOLIO_PROJECTS_VIEW_LINEAL_DESC]]>
        </message>
    </layout>

    <!-- Add fields to the request variables for the layout. -->
    <fields name="request">
        <fieldset name="request"
            addfieldpath="/administrator/components/com_vipportfolio/models/fields"
        >
            <field name="catid" type="vpcategories"
                description="COM_VIPPORTFOLIO_CHOOSE_CATEGORY_DESC"
                label="COM_VIPPORTFOLIO_CHOOSE_CATEGORY_LABEL"
            />
            
        </fieldset>
    </fields>

    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <fieldset name="basic">
        
            <field name="lModal" type="list" default="0"  label="COM_VIPPORTFOLIO_MODAL_WINDOW" description="COM_VIPPORTFOLIO_MODAL_WINDOW_DESC" >
               <option value="">COM_VIPPORTFOLIO_CONFIG_NONE</option>
               <option value="native">COM_VIPPORTFOLIO_CONFIG_JOOMLA_NATIVE</option>
               <option value="slimbox">Slimbox</option>
            </field>
            <field name="lDisplayTitle" type="radio" default="0"  label="COM_VIPPORTFOLIO_SHOW_TITLE" description="COM_VIPPORTFOLIO_SHOW_TITLE_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="lLinkable" type="radio" default="0"  label="COM_VIPPORTFOLIO_IMAGE_LINK" description="COM_VIPPORTFOLIO_IMAGE_LINK_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="lTitleLinkable" type="radio" default="0"  label="COM_VIPPORTFOLIO_TITLE_LINK" description="COM_VIPPORTFOLIO_TITLE_LINK_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="lineal_open_link" type="list" default="_self"  label="COM_VIPPORTFOLIO_OPEN_LINK" description="COM_VIPPORTFOLIO_OPEN_LINK_DESC" >
                <option value="_self">COM_VIPPORTFOLIO_SAME_TAB</option>
                <option value="_blank">COM_VIPPORTFOLIO_NEW_TAB</option>
            </field>
            <field name="lDisplayUrl" type="radio" default="0"  label="COM_VIPPORTFOLIO_SHOW_URL" description="COM_VIPPORTFOLIO_SHOW_URL_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
           
            <field name="lineal_thumb_width" type="text" default="300" size="50" label="COM_VIPPORTFOLIO_THUMB_WIDTH" description="COM_VIPPORTFOLIO_THUMB_WIDTH_DESC" />
            <field name="lineal_thumb_height" type="text" default="300" size="50" label="COM_VIPPORTFOLIO_THUMB_HEIGHT" description="COM_VIPPORTFOLIO_THUMB_HEIGHT_DESC" />
            
            <field name="lineal_extra_image" type="radio" default="0"  label="COM_VIPPORTFOLIO_EXTRA_IMAGE" description="COM_VIPPORTFOLIO_EXTRA_IMAGE_DESC" class="btn-group">
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field name="lineal_extra_thumb_width" type="text" default="50" size="50" label="COM_VIPPORTFOLIO_EXTRA_THUMB_WIDTH" description="COM_VIPPORTFOLIO_EXTRA_THUMB_WIDTH_OPTION_DESC" />
            <field name="lineal_extra_thumb_height" type="text" default="50" size="50" label="COM_VIPPORTFOLIO_EXTRA_THUMB_HEIGHT" description="COM_VIPPORTFOLIO_EXTRA_THUMB_HEIGHT_OPTION_DESC" />
            <field name="lineal_extra_max" type="text" default="3" size="50" label="COM_VIPPORTFOLIO_EI_NUM" description="COM_VIPPORTFOLIO_EI_NUM_DESC" />
        
        </fieldset>
    </fields>
    
