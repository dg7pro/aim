                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="ctabsTitleLinkable" type="radio" default="0"  label="COM_VIPPORTFOLIO_TITLE_LINK" description="COM_VIPPORTFOLIO_TITLE_LINK_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="tabbed_open_link" type="list" default="_self"  label="COM_VIPPORTFOLIO_OPEN_LINK" description="COM_VIPPORTFOLIO_OPEN_LINK_DESC" >
                <option value="_self">COM_VIPPORTFOLIO_SAME_TAB</option>
                <option value="_blank">COM_VIPPORTFOLIO_NEW_TAB</option>
            </field>
            <field name="ctabsDisplayTips" type="radio" default="0"  label="COM_VIPPORTFOLIO_DISPLAY_TIPS" description="COM_VIPPORTFOLIO_DISPLAY_TIPS_DESC" class="btn-group">
