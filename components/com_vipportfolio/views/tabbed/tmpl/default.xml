    </layout>

   <!-- Add fields to the request variables for the layout. -->
    <fields name="request">
        <fieldset name="request"
            addfieldpath="/administrator/components/com_vipportfolio/models/fields"
        >
            
            <field name="categories_ids" type="vpcategories" multiple="true" size="10"
                label="COM_VIPPORTFOLIO_VIEW_OPTION_CATEGORIES_LABEL"
                description="COM_VIPPORTFOLIO_VIEW_OPTION_CATEGORIES_DESC"
            />
            
        </fieldset>
    </fields>
    
    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <fieldset name="basic">
            <field name="ctabModal" type="list" default="0"  label="COM_VIPPORTFOLIO_MODAL_WINDOW" description="COM_VIPPORTFOLIO_MODAL_WINDOW_DESC" >
                <option value="">COM_VIPPORTFOLIO_CONFIG_NONE</option>
