                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field name="ctabsDisplayInner" type="radio" default="0"  label="COM_VIPPORTFOLIO_DISPLAY_INNER" description="COM_VIPPORTFOLIO_DISPLAY_INNER_DESC" class="btn-group">
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field name="ctabsInnerURL" type="radio" default="0"  label="COM_VIPPORTFOLIO_DISPLAY_INNER_URL" description="COM_VIPPORTFOLIO_DISPLAY_INNER_URL_DESC" class="btn-group">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field name="ctabsInnerTitleMaxChars" type="text" default="20" size="50" label="COM_VIPPORTFOLIO_TITLE_MAX_CHARACTERS" description="COM_VIPPORTFOLIO_TITLE_MAX_CHARACTERS_DESC" />
            <field name="ctabsInnerMaxChars" type="text" default="80" size="50" label="COM_VIPPORTFOLIO_MAX_CHARACTERS" description="COM_VIPPORTFOLIO_MAX_CHARACTERS_DESC" />
            <field name="ctabs_thumb_width" type="text" default="200" size="50" label="COM_VIPPORTFOLIO_THUMB_WIDTH" description="COM_VIPPORTFOLIO_THUMB_WIDTH_DESC" />
            <field name="ctabs_thumb_height" type="text" default="200" size="50" label="COM_VIPPORTFOLIO_THUMB_HEIGHT" description="COM_VIPPORTFOLIO_THUMB_HEIGHT_DESC" />
            
        </fieldset>
