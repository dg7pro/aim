<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" 
			readonly="true" class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="name" type="text" class="inputbox"
			size="60" label="COM_VIPPORTFOLIO_NAME"
			required="true" />

		<field name="alias" type="text" class="inputbox" 
		    size="60" 
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC" 
			filter="trim"
		/>

		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
		</field>
		
		<field
            name="image"
            type="file"
            label="COM_VIPPORTFOLIO_IMAGE"
            class="inputbox"
            size="60"
            />
            
		<field name="desc" type="editor" buttons="true" hide="pagebreak,readmore,article,image"
            class="inputbox"
            filter="safehtml"
            width="500"
            label="JGLOBAL_DESCRIPTION" />

        <field name="meta_title" type="text" class="inputbox"
            size="60" 
            label="COM_VIPPORTFOLIO_META_TITLE" 
            description="COM_VIPPORTFOLIO_META_TITLE_DESC" />
        <field name="meta_keywords" type="text" class="inputbox"
            size="60" 
            label="COM_VIPPORTFOLIO_META_KEYWORDS" 
            description="COM_VIPPORTFOLIO_META_KEYWORDS_DESC" />
        <field name="meta_desc" type="textarea" class="inputbox"
            rows="5" cols="30" 
            label="COM_VIPPORTFOLIO_META_DESC"
            description="COM_VIPPORTFOLIO_META_DESC_DESC" />
        <field name="meta_canonical" type="text" class="inputbox"
            size="60" 
            label="COM_VIPPORTFOLIO_META_CANONICAL"
            description="COM_VIPPORTFOLIO_META_CANONICAL_DESC" />
            
	</fieldset>
</form>